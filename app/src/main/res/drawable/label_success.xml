<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/label_radius"/>

            <stroke android:width="1dip" android:color="@color/button_success_pressed_border"/>

            <solid android:color="@color/button_success_pressed"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/label_radius"/>

            <stroke android:width="1dip" android:color="@color/button_success_pressed_border"/>

            <solid android:color="@color/button_success_pressed"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/label_radius"/>

            <stroke android:width="1dip" android:color="@color/button_success_border"/>

            <solid android:color="@color/button_success"/>
        </shape>
    </item>

</selector>