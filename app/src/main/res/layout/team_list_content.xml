<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/listview_background"
    android:gravity="top|center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/team_grid_activity">

    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/progress_bar_circle" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@color/listview_divider"
        android:dividerHeight="@dimen/listview_divider_height_compact"
        android:drawSelectorOnTop="true"
        android:listSelector="@drawable/selector_card"
        android:paddingBottom="@dimen/listview_padding_vetical"
        android:paddingEnd="@dimen/listview_padding_horizontal"
        android:paddingStart="@dimen/listview_padding_horizontal"
        android:paddingTop="@dimen/listview_padding_vetical"
        android:scrollbarStyle="outsideOverlay"
        android:visibility="gone" />

</RelativeLayout>
