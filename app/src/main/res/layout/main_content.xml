<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:mContext="com.summertaker.akb48visual.MainActivity"
    tools:showIn="@layout/main_app_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:contentDescription="@string/blank"
            android:scaleType="centerCrop"
            android:src="@drawable/pic_3"
            android:visibility="gone" />

        <com.github.paolorotolo.expandableheightlistview.ExpandableHeightGridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawSelectorOnTop="true"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:listSelector="@drawable/selector_card"
            android:numColumns="3"
            android:padding="0dp"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="20dp" />

    </LinearLayout>

</ScrollView>